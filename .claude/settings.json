{
  "includeCoAuthoredBy": false,
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"\\033[2m%s@%s:\\033[22m%s \\033[2m[%s]\\033[22m\" \"$(whoami)\" \"$(hostname -s)\" \"$(echo \"$input\" | jq -r '.workspace.current_dir' | sed \"s|$HOME|~|\")\", \"$(echo \"$input\" | jq -r '.model.display_name')\""
  }
}
